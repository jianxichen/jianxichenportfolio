{
    "name": "glitch-mvp",
    "version": "0.1.0",
    "description": "A simple Node app built on fastify, instantly up and running.",
    "main": "server.js",
    "scripts": {
        "start": "nodemon --ignore '*bundle.js' --exec npm run build && sleep && npm run deploy",
        "build": "esbuild src/wizardry.js --bundle --outfile=public/bundle.js",
        "deploy": "node server.js"
    },
    "dependencies": {
        "@babylonjs/core": "^7.3.2",
        "@fastify/formbody": "^7.4.0",
        "@fastify/static": "^7.0.3",
        "@fastify/view": "^9.0.0",
        "fastify": "^4.26.2",
        "handlebars": "^4.7.8"
    },
    "repository": {
        "url": "https://glitch.com/edit/#!/glitch-mvp"
    },
    "license": "MIT",
    "keywords": [
        "node",
        "glitch"
    ],
    "devDependencies": {
        "esbuild": "0.20.2",
        "nodemon": "^3.1.0"
    }
}
