{
	"name": "glitch-mvp",
	"version": "0.1.0",
	"description": "A simple Node app built on fastify, instantly up and running.",
	"main": "server.js",
	"scripts": {
		"start": "npm run build && nodemon",
		"build": "esbuild src/**/*.ts --bundle --outdir=public/scripts/ --format=esm --minify",
		"deploy": "node server.js"
	},
	"dependencies": {
		"@babylonjs/core": "^7.5.0",
		"@babylonjs/inspector": "^7.5.0",
		"@babylonjs/loaders": "^7.5.0",
		"@fastify/formbody": "^7.4.0",
		"@fastify/static": "^7.0.3",
		"@fastify/view": "^9.0.0",
		"fastify": "^4.26.2",
		"handlebars": "^4.7.8"
	},
	"repository": {
		"url": "https://glitch.com/edit/#!/glitch-mvp"
	},
	"license": "MIT",
	"keywords": [
		"node",
		"glitch"
	],
	"devDependencies": {
		"esbuild": "0.20.2",
		"nodemon": "^3.1.0"
	},
	"nodemonConfig": {
		"ignore": [
			"/public/scripts/*"
		],
		"events": {
			"exit": "npm run build"
		},
		"ext": "*"
	},
	"type": "module"
}
